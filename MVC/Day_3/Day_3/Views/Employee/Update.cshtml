@model Day_3.Models.Employee

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Navbar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="#">
                                Home
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Features</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Pricing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">About</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Dropdown</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <a class="dropdown-item" href="#">Something else here</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Separated link</a>
                            </div>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <input class="form-control me-sm-2" type="search" placeholder="Search">
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>
    </div>
    <br />
    <br />
    <br />
    <form method="post">
        <div class="form-group">
            <fieldset>
                @Html.LabelFor(e => e.EmpNo, new { @class = "form-label mt-4" })
                @Html.TextBoxFor(e => e.EmpNo, new { @class = "form-control is-valid", @value = "" })
                @Html.ValidationMessageFor(e => e.EmpNo, "", new { @class = "invalid-feedback" })
            </fieldset>
        </div>
        <div class="form-group">
            <fieldset>
                @Html.LabelFor(e => e.EmpFname, new { @class = "form-label mt-4" })
                @Html.TextBoxFor(e => e.EmpFname, new { @class = "form-control is-valid" })
                @Html.ValidationMessageFor(e => e.EmpFname, "", new { @class = "invalid-feedback" })
            </fieldset>
        </div>
        <div class="form-group">
            <fieldset>
                @Html.LabelFor(e => e.EmpLname, new { @class = "form-label mt-4" })
                @Html.TextBoxFor(e => e.EmpLname, new { @class = "form-control is-valid" })
                @Html.ValidationMessageFor(e => e.EmpLname, "", new { @class = "invalid-feedback" })
            </fieldset>
        </div>
        <div class="form-group">
            <fieldset>
                @Html.LabelFor(e => e.Salary, new { @class = "form-label mt-4" })
                @Html.TextBoxFor(e => e.Salary, new { @class = "form-control is-valid" })
                @Html.ValidationMessageFor(e => e.Salary, "", new { @class = "invalid-feedback" })
            </fieldset>
        </div>
        <div class="form-group">
            <fieldset>
                @Html.LabelFor(e => e.DeptNo, new { @class = "form-label mt-4" })
                @Html.DropDownListFor(e => e.DeptNo, null, new { @class = "form-select" })
                @Html.ValidationMessageFor(e => e.DeptNo, "", new { @class = "invalid-feedback" })
            </fieldset>
        </div>
        <br />
        <br />
        <br />
        <button type="submit" class="btn btn-primary">Update</button>
    </form>


    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
</body>
</html>
