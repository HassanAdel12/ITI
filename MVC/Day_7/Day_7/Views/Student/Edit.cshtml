@model Student

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<form asp-action="Edit" asp-controller="Student" method="post">
    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Id" class="control-label"></label>
        <input asp-for="Id" class="form-control" readonly/>
        <span asp-validation-for="Id"></span>
    </div>

    <br />

    <div class="form-group">
        <label asp-for="FullName" class="control-label"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName"></span>
    </div>

    <br />

    <div class="form-group">
        <label asp-for="Graduated" class="control-label"></label>
        <input asp-for="Graduated" />
        <span asp-validation-for="Graduated"></span>
    </div>

    <br />

    <div class="form-group">
        <label asp-for="Gpa" class="control-label"></label>
        <input asp-for="Gpa" class="form-control" />
        <span asp-validation-for="Gpa"></span>
    </div>

    <br />

    <div class="form-group">
        <label asp-for="CityId" class="control-label"></label>
        <select asp-for="CityId" asp-items="@ViewBag.CityId" class="form-select"></select>
        <span asp-validation-for="CityId"></span>
    </div>

    <br />
    <br />

    <input type="submit" value="Edit" class="btn btn-success" />

</form>


@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
