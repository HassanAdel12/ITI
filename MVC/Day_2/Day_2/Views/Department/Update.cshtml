
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update</title>
</head>
<body>
    @{ 
        Day_2.Models.Department department = ViewData["Update"] as Day_2.Models.Department;
    }
    <div>
        <form method="post">
            <div class="id">
                <label for="id">ID: </label>
                <input type="number" name="Id" value="@department.Id">
            </div>
            <div class="Name">
                <label for="Name">Name: </label>
                <input type="text" name="Name" value="@department.Name">
            </div>
            <div class="Title">
                <label for="Title">Title: </label>
                <input type="text" name="Title" value="@department.Title">
            </div>

            <div>
                <input type="submit" value="Update"/>
            </div>
        </form>
    </div>
</body>
</html>
